@using MIS.Common
@using MIS.Web.Models
@model MIS.Web.Models.CourseViewModel

@{
    ViewBag.Title = @UIString.TitlePageCourse;
}

<section class="content-header">
    <h1 class="fa fa-list">
        @UIString.TitlePageManageLarge
        <small> @UIString.FieldNameCourseId</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @UIString.BreadCrumbHome</a></li>
        <li><a href="@Url.Action("Index", "Course")">@UIString.TitlePageCourse</a></li>
        <li class="active">@UIString.BreadCrumbDetails</li>
    </ol>
    <div class="box-tools">
        <p class="text-right btn-grid-group">

            <a class="btn btn-default btn-view" href="@Url.Action("Index", "Course")" title="@MIS.Common.UIString.ButtonBack">
                <i class="fa fa-chevron-circle-left"></i>
                @MIS.Common.UIString.ButtonBack
            </a>

            <a class="btn btn-info btn-view" href="@Url.Action("Edit", "Course", new { id = Model.Id })" title="@MIS.Common.UIString.ButtonEdit">
                <i class="fa fa-edit"></i>
                @MIS.Common.UIString.ButtonEdit
            </a>

            <a class="btn btn-danger btn-view" href="#" onclick="javascript:deleteItem(@Model.Id);" title="@MIS.Common.UIString.ButtonDelete">
                <i class="fa fa-trash"></i>
                @MIS.Common.UIString.ButtonDelete
            </a>
        </p>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-eye"></i>
                        @UIString.FieldNameCourseId @UIString.BreadCrumbDetails
                    </h3>
                </div>
                <div class="box-body">
                    <div class="box-body no-padding table-responsive">
                        <table class="table table-striped table-bordered detail-view" id="w0">
                            <tbody class="table-hover">
                                <tr class="odd">
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.CourseName)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.CourseName)</td>
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.ModuleId)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.Module.Name)</td>
                                </tr>
                                <tr class="even">
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.SemesterId)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.Semester.Name)</td>
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.SyllabusId)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.Syllabus.Name)</td>
                                </tr>
                                <tr class="odd">
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.CampusId)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.Campus.Name)</td>
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.CollegeId)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.College.Name)</td>
                                </tr>
                                <tr class="even">
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.CreatedDate)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.CreatedDate.DateTime)</td>
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.CreatedBy)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.CreatedBy)</td>
                                </tr>
                                <tr class="odd">
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.UpdatedDate)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.UpdatedDate.DateTime)</td>
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.UpdatedBy)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.UpdatedBy)</td>
                                </tr>
                                <tr class="even">
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.Note)</th>
                                    <td colspan="3">@Html.DisplayFor(model => model.Note)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript" src="~/Scripts/bootbox.min.js"></script>
<script type="text/javascript">
        function deleteItem(id) {
            bootbox.dialog({
                message: "@Message.ConfirmationDeletion @UIString.FieldNameCourseId?",
                title: "@UIString.TitleDialogConfirmDelete @UIString.FieldNameCourseId",
                buttons: {
                    cancel: {
                        label: "@UIString.ButtonConfirmDeleteNo",
                        className: "btn-default",
                        callback: function () {
                            bootbox.hideAll();
                        }
                    },
                    ok: {
                        label: "@UIString.ButtonConfirmDeleteYes",
                        className: "btn-primary",
                        callback: function () {
                            location.href = "@Url.Action("Delete", "Course")/" + id;
                        }
                    }
                }
            });
        }
</script>