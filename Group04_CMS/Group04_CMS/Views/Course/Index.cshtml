@using MIS.Common
@using MIS.Web.Models
@model IEnumerable<CourseViewModel>

    @{
        ViewBag.Title = @UIString.TitlePageCourse;
    }

    <section class="content-header">
        <h1>
            <i class="fa fa-list"></i>
            @UIString.TitlePageManageLarge
            <small> @UIString.FieldNameCourseId</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> @UIString.BreadCrumbHome</a></li>
            <li class="active">@UIString.TitlePageCourse</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            <i class="fa fa-search"></i>
                            @UIString.BreadCrumbView @UIString.FieldNameCourseId
                        </h3>
                        <div class="box-tools">
                            <p class="text-right btn-grid-group">

                                <a class="btn btn-primary btn-sm" href="@Url.Action("Create")" title="@UIString.ButtonAdd">
                                    <i class="fa fa-plus"></i> @UIString.ButtonAdd
                                </a>

                                <a class="btn bg-orange btn-sm" href="#" title="@UIString.ButtonPDF">
                                    <i class="fa fa-file-pdf-o "></i> @UIString.ButtonPDF
                                </a>

                                <a class="btn bg-teal btn-sm" href="#" title="@UIString.ButtonEXCEL">
                                    <i class="fa fa-file-excel-o"></i> @UIString.ButtonEXCEL
                                </a>
                            </p>
                        </div>
                    </div>

                    <div class="box-body table-responsive no-padding">
                        <table class="table table-striped table-hover">
                            <tbody>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CourseName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ModuleId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SemesterId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SyllabusId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CampusId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CollegeId)
                                    </th>

                                    <th></th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CourseName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Module.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Semester.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Syllabus.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Campus.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.College.Name)
                                        </td>
                                        <td class="row">
                                            <div class="col-sm-12">
                                                <a href="@Url.Action("Details", "Course", new { id = item.Id })" title="@UIString.ButtonViewDetail"><span class="glyphicon glyphicon-eye-open"></span></a>
                                                <a href="@Url.Action("Edit", "Course", new { id = item.Id })" title="@UIString.ButtonEdit"><span class="glyphicon glyphicon-pencil"></span></a>
                                                <a href="#" onclick="javascript:deleteItem(@item.Id);" title="@UIString.ButtonDelete"><span class="glyphicon glyphicon-trash"></span></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Scripts/toastr.js"></script>
    <script type="text/javascript" src="~/Scripts/bootbox.min.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": false,
            "positionClass": "toast-top-center",
            "preventDuplicates": true,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        $(document).ready(function () {
            var msg = "@ViewBag.Message";
            if (msg != "") {
                toastr["success"](msg);
            }
        });

        function deleteItem(id) {
            bootbox.dialog({
                message: "@Message.ConfirmationDeletion @UIString.FieldNameCourseId?",
                title: "@UIString.TitleDialogConfirmDelete @UIString.FieldNameCourseId",
                buttons: {
                    cancel: {
                        label: "@UIString.ButtonConfirmDeleteNo",
                        className: "btn-default",
                        callback: function () {
                            bootbox.hideAll();
                        }
                    },
                    ok: {
                        label: "@UIString.ButtonConfirmDeleteYes",
                        className: "btn-primary",
                        callback: function () {
                            location.href = "@Url.Action("Delete", "Course")/" + id;
                        }
                    }
                }
            });
        }

    </script>
