@using Group04_CMS.Common.Global
@model Group04_CMS.ViewModels.RoleModel

@{
    ViewBag.Title = @UIString.TitlePageRole;
}

@Scripts.Render("~/bundles/Account")
<section class="content-header">
    <h1>
        <i class="fa fa-list"></i>
        @UIString.TitlePageManageLarge
        <small> @UIString.FieldNameRoleId</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @UIString.BreadCrumbHome</a></li>
        <li><a href="@Url.Action("Index", "Role")">@UIString.TitlePageRole</a></li>
        <li class="active">@UIString.BreadCrumbCreate</li>
    </ol>
</section>

<section class="content" ng-app="accountApp">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-plus-square"></i>
                        @UIString.BreadCrumbCreate @UIString.FieldNameRoleId
                    </h3>
                </div>

                <!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm(new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body" ng-controller="accountController">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label" })
                                @*<input type="text" ng-model ="RoleName"/>*@
                                @Html.EditorFor(model => model.RoleName, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control",
                                        data_ng_model = "RoleName"
                                    }
                                })
                                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label" })
                                <select ng-model="selectedStatus" class="dropdown form-control" required>
                                    <option value="" selected>-- Choose status --</option>
                                    <option ng-repeat="s in statusData"
                                            value="{{s.StatusId}}">
                                        {{s.StatusName}}
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
