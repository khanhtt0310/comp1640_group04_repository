@using Group04_CMS.Common.Global
@model IEnumerable<Group04_CMS.ViewModels.UserRoleModel>

@{
    ViewBag.Title = @UIString.TitlePageUserRole;
}

@Scripts.Render("~/bundles/Account")
<section class="content-header">
    <h1>
        <i class="fa fa-list"></i>
        @UIString.TitlePageManageLarge
        <small> @UIString.FieldNameUserRoleId</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @UIString.BreadCrumbHome</a></li>
        <li class="active">@UIString.TitlePageUserRole</li>
    </ol>
</section>

<section class="content" ng-controller="accountController">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        <i class="fa fa-search"></i>
                        @UIString.BreadCrumbView @UIString.FieldNameUserRoleId
                    </h3>
                    <div class="box-tools">
                        <p class="text-right btn-grid-group">

                            <a class="btn btn-primary btn-sm" href="@Url.Action("CreateUserRole")" title="@UIString.ButtonAdd">
                                <i class="fa fa-plus"></i> @UIString.ButtonAdd
                            </a>
                        </p>
                    </div>
                </div>

                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped table-hover" ng-init="getUserRoles()">
                        <tbody>
                            <tr>
                                <th>
                                    Role
                                </th>
                                <th>
                                    User
                                </th>
                                <th>
                                    Created Date
                                </th>
                                <th>
                                    Note
                                </th>
                                <th>
                                    Status
                                </th>
                                <th></th>
                            </tr>
                            <tr ng-repeat="ur in userRoles">
                                <td>{{ ur.RoleName }}</td>
                                <td>{{ ur.UserName }}</td>
                                <td>{{ur.GeneralStatus.CreateTime | date: 'medium' }}</td>
                                <td>{{ur.Note}}</td>
                                <td>{{ur.Status}}</td>
                                <td class="row">
                                    <div class="col-sm-12">
                                        <a ng-href="@Url.Action("UserRoleDetail", "Account")/{{ur.UserRoleId}}" title="@UIString.ButtonViewDetail"><span class="glyphicon glyphicon-eye-open"></span></a>
                                        <a ng-href="@Url.Action("EditUserRole", "Account")/{{ur.UserRoleId}}" title="@UIString.ButtonEdit"><span class="glyphicon glyphicon-pencil"></span></a>
                                        <a ng-really-message="Are you sure want to delete this one ?" ng-really-click="removeUserRole(ur)" item="ur" title="@UIString.ButtonDelete"><span class="glyphicon glyphicon-trash"></span></a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


