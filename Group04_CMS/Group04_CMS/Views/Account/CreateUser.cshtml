@using Group04_CMS.Common.Global
@model Group04_CMS.ViewModels.UserModel

@{
    ViewBag.Title = @UIString.TitlePageUser;
}

@Scripts.Render("~/bundles/Account")

<section class="content-header">
    <h1>
        <i class="fa fa-list"></i>
        @UIString.TitlePageManageLarge
        <small> @UIString.FieldNameUserId</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @UIString.BreadCrumbHome</a></li>
        <li><a href="@Url.Action("Index", "Account")">@UIString.TitlePageUser</a></li>
        <li class="active">@UIString.BreadCrumbCreate</li>
    </ol>
</section>

<section class="content" ng-controller="accountController">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-plus-square"></i>
                        @UIString.BreadCrumbCreate @UIString.FieldNameUserId
                    </h3>
                </div>

                <!-- /.box-header -->
                <!-- form start -->
                <form name="userForm">
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label class="control-label">User Name</label>
                                <input type="text" class="form-control" ng-model="UserName" ng-requied="true" />
                            </div>

                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label" })
                                <select ng-model="selectedStatus" class="dropdown form-control" ng-requied="true" >
                                    <option value="" selected>-- Choose status --</option>
                                    <option ng-repeat="s in statusData"
                                            value="{{s.StatusId}}">
                                        {{s.StatusName}}
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                <label class="control-label">Email</label>
                                <input type="text" class="form-control" ng-model="Email" ng-requied="true" />
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">

                        <a class="btn btn-default btn-view" href="@Url.Action("Index", "Account")" title="@UIString.ButtonBack">
                            <i class="fa fa-chevron-circle-left"></i>
                            @UIString.ButtonBack
                        </a>

                        <button class="btn btn-primary btn-view" ng-click="userForm.$valid && addUser()" title="@UIString.ButtonSubmit">
                            @UIString.ButtonSubmit
                        </button>

                    </div>
                </form>

            </div>
        </div>
    </div>
</section>

