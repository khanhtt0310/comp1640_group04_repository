@using Group04_CMS.Common.Global
@model IEnumerable<Group04_CMS.ViewModels.UserModel>

@{
    ViewBag.Title = @UIString.TitlePageUser;
}

@Scripts.Render("~/bundles/Account")
@*<script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>*@
<section class="content-header">
    <h1>
        <i class="fa fa-list"></i>
        @UIString.TitlePageManageLarge
        <small> @UIString.ObjectUser</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @UIString.BreadCrumbHome</a></li>
        <li class="active">@UIString.TitlePageUser</li>
    </ol>
</section>

<section class="content" ng-controller="accountController">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        <i class="fa fa-search"></i>
                        @UIString.BreadCrumbView @UIString.ObjectUser
                    </h3>
                    <div class="box-tools">
                        <p class="text-right btn-grid-group">

                            <a class="btn btn-primary btn-sm" href="@Url.Action("CreateUser")" title="@UIString.ButtonAdd">
                                <i class="fa fa-plus"></i> @UIString.ButtonAdd
                            </a>
                        </p>
                    </div>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped table-hover" ng-init="getUsers()">
                        <tbody>
                            <tr>
                                <th>
                                    User Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Created Date
                                </th>
                                <th>
                                    Status
                                </th>

                                <th></th>
                            </tr>

                            <tr ng-repeat="u in users">
                                <td>{{ u.UserName }}</td>
                                <td>{{ u.Email }}</td>
                                <td>{{ u.Status.CreateTime | date: 'medium' }}</td>
                                <td>{{ u.Status.StatusName }}</td>
                                <td class="row">
                                    <div class="col-sm-12">
                                        <a ng-href="@Url.Action("UserDetail", "Account")/{{u.Id}}" title="@UIString.ButtonViewDetail"><span class="glyphicon glyphicon-eye-open"></span></a>
                                        <a ng-href="@Url.Action("EditUser", "Account")/{{u.Id}}" title="@UIString.ButtonEdit"><span class="glyphicon glyphicon-pencil"></span></a>
                                        <a ng-really-message="Are you sure want to delete user: {{u.UserName}} ?" ng-really-click="removeUser(u)" item="r" title="@UIString.ButtonDelete"><span class="glyphicon glyphicon-trash"></span></a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

