@using MIS.Common
@model IEnumerable<MIS.Web.Models.GradeGroupViewModel>

    @{
        ViewBag.Title = @MIS.Common.UIString.TitlePageHome;
    }

    <section class="content-header">
        <h1>
            <i class="fa fa-list"></i>
            @MIS.Common.UIString.TitlePageManageLarge
            <small>@MIS.Common.UIString.FieldNameGradeGroupId </small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> @MIS.Common.UIString.BreadCrumbHome</a></li>
            <li><a href="#">@MIS.Common.UIString.FieldNameGradeGroupId</a></li>
            <li class="active">@MIS.Common.UIString.BreadCrumbEdit</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            <i class="fa fa-search"></i>
                            @MIS.Common.UIString.BreadCrumbView @MIS.Common.UIString.FieldNameGradeGroupId

                        </h3>
                        <div class="box-tools">
                            <p class="text-right btn-grid-group">

                                <a class="btn btn-primary btn-sm" href="@Url.Action("Create")" title="@MIS.Common.UIString.ButtonAdd">
                                    <i class="fa fa-plus"></i> @MIS.Common.UIString.ButtonAdd
                                </a>

                                <a class="btn bg-orange btn-sm" href="#" title="@MIS.Common.UIString.ButtonPDF">
                                    <i class="fa fa-file-pdf-o "></i> @MIS.Common.UIString.ButtonPDF
                                </a>

                                <a class="btn bg-teal btn-sm" href="#" title="@MIS.Common.UIString.ButtonEXCEL">
                                    <i class="fa fa-file-excel-o"></i> @MIS.Common.UIString.ButtonEXCEL
                                </a>
                            </p>
                        </div>
                    </div>

                    <div class="box-body table-responsive no-padding">
                        <table class="table table-striped table-hover">
                            <tbody>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GradeGroupName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ParentId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SyllabusId)
                                    </th>
                                   
                                    <th>
                                        @Html.DisplayNameFor(model => model.Weight)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.StatusId)
                                    </th>
                                    <th></th>
                                </tr>
                                @foreach (var item in Model)
{
    string style = item.Parent.Id == 0 ? "background-color:blue;font-weight:bold;color: white" : null;
    <tr style="@style">
        <td  style="">
            @Html.DisplayFor(modelItem => item.GradeGroupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Parent.GradeGroupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Syllabus.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.StatusName)
        </td>
        <td class="row">
            <div class="col-sm-12">
                <a href="@Url.Action("Details", "GradeGroup", new { id = item.Id })" title="@UIString.ButtonViewDetail"><span class="glyphicon glyphicon-eye-open"></span></a>
                <a href="@Url.Action("Edit", "GradeGroup", new { id = item.Id })" title="@UIString.ButtonEdit"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="#" onclick="javascript:deleteItem(@item.Id);" title="@UIString.ButtonDelete"><span class="glyphicon glyphicon-trash"></span></a>
            </div>
        </td>
    </tr>
}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Scripts/toastr.js"></script>
    <script type="text/javascript" src="~/Scripts/bootbox.min.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": false,
            "positionClass": "toast-top-center",
            "preventDuplicates": true,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        $(document).ready(function () {
            var msg = "@ViewBag.Message";
            if (msg != "") {
                toastr["success"](msg);
            }
        });

        function deleteItem(id) {
            bootbox.dialog({
                message: "@Message.ConfirmationDeletion @UIString.ObjectGradeGroup?",
                title: "@UIString.TitleDialogConfirmDelete @UIString.ObjectGradeGroup",
                buttons: {
                    cancel: {
                        label: "@UIString.ButtonConfirmDeleteNo",
                        className: "btn-default",
                        callback: function () {
                            bootbox.hideAll();
                        }
                    },
                    ok: {
                        label: "@UIString.ButtonConfirmDeleteYes",
                        className: "btn-primary",
                        callback: function () {
                            location.href = "@Url.Action("Delete", "GradeGroup")/" + id;
                        }
                    }
                }
            });
        }

    </script>
