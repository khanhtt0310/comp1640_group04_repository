@using Group04_CMS.Common.Global
@model IEnumerable<Group04_CMS.ViewModels.StudentModel>

@{
    ViewBag.Title = @UIString.TitlePageStudent;
}

@Scripts.Render("~/bundles/Faculty")
<section class="content-header">
    <h1>
        <i class="fa fa-list"></i>
        @UIString.TitlePageManageLarge
        <small> @UIString.FieldNameStudent</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @UIString.BreadCrumbHome</a></li>
        <li class="active">@UIString.TitlePageStudent</li>
    </ol>
</section>

<section class="content" ng-controller="facultyController">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        <i class="fa fa-search"></i>
                        @UIString.BreadCrumbView @UIString.FieldNameStudent
                    </h3>
                    <div class="box-tools">
                        <p class="text-right btn-grid-group">

                            <a class="btn btn-primary btn-sm" href="@Url.Action("CreateStudent")" title="@UIString.ButtonAdd">
                                <i class="fa fa-plus"></i> @UIString.ButtonAdd
                            </a>
                        </p>
                    </div>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped table-hover" ng-init="getStudents()">
                        <tbody>
                            <tr>
                                <th>
                                    @UIString.FieldNameStudentCode
                                </th>
                                <th>
                                    @UIString.FieldNameStudentName
                                </th>
                                <th>
                                    @UIString.FieldNamePhoneNumber
                                </th>
                                <th>
                                    @UIString.FieldNameEmail
                                </th>
                                <th>
                                    @UIString.FieldNameDateOfBirth
                                </th>
                                <th>
                                    @UIString.FieldNameCreatedDate
                                </th>
                                <th>
                                    @UIString.FieldNameStatus
                                </th>
                                <th></th>
                            </tr>

                            <tr ng-repeat="item in students">
                                <td>{{ item.StudentCode }}</td>
                                <td>{{ item.FullName }}</td>
                                <td>{{ item.PhoneNumber }}</td>
                                <td>{{ item.Email }}</td>
                                <td>{{ item.DateOfBirth }}</td>
                                <td>{{ item.GeneralStatus.CreateTime | date: 'medium' }}</td>
                                <td>{{ item.Status }}</td>
                                <td class="row">
                                    <div class="col-sm-12">
                                        <a ng-href="@Url.Action("StudentDetail", "Faculty")/{{item.StudentId}}" title="@UIString.ButtonViewDetail"><span class="glyphicon glyphicon-eye-open"></span></a>
                                        <a ng-href="@Url.Action("EditStudent", "Faculty")/{{item.StudentId}}" title="@UIString.ButtonEdit"><span class="glyphicon glyphicon-pencil"></span></a>
                                        <a ng-really-message="Are you sure want to delete user: {{item.StudentCode}} ?" ng-really-click="deleteStudent(item)" item="item" title="@UIString.ButtonDelete"><span class="glyphicon glyphicon-trash"></span></a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>



