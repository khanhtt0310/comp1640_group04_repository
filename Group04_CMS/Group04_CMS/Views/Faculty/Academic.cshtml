@using Group04_CMS.Common.Global
@model IEnumerable<Group04_CMS.ViewModels.AcademicModel>

@{
    ViewBag.Title = @UIString.TitlePageAcademic;
}

@Scripts.Render("~/bundles/Faculty")
<section class="content-header">
    <h1>
        <i class="fa fa-list"></i>
        @UIString.TitlePageManageLarge
        <small> @UIString.FieldNameAcademicSession</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @UIString.BreadCrumbHome</a></li>
        <li class="active">@UIString.TitlePageAcademic</li>
    </ol>
</section>

<section class="content" ng-controller="facultyController">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        <i class="fa fa-search"></i>
                        @UIString.BreadCrumbView @UIString.FieldNameAcademicSession
                    </h3>
                    <div class="box-tools">
                        <p class="text-right btn-grid-group">

                            <a class="btn btn-primary btn-sm" href="@Url.Action("CreateAcademic")" title="@UIString.ButtonAdd">
                                <i class="fa fa-plus"></i> @UIString.ButtonAdd
                            </a>
                        </p>
                    </div>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped table-hover" ng-init="getAcademics()">
                        <tbody>
                            <tr>
                                <th>
                                    @UIString.FieldNameAccSessName
                                </th>
                                <th>
                                    @UIString.FieldNameFromDate
                                </th>
                                <th>
                                    @UIString.FieldNameToDate
                                </th>
                                <th></th>
                            </tr>

                            <tr ng-repeat="item in academics">
                                <td>{{ item.AccSessName }}</td>
                                <td>{{ item.FromDate | date }}</td>
                                <td>{{ item.ToDate | date }}</td>
                                <td class="row">
                                    <div class="col-sm-12">
                                        <a ng-href="@Url.Action("AcademicDetail", "Faculty")/{{item.AccademicSessionId}}" title="@UIString.ButtonViewDetail"><span class="glyphicon glyphicon-eye-open"></span></a>
                                        <a ng-href="@Url.Action("EditAcademic", "Faculty")/{{item.AccademicSessionId}}" title="@UIString.ButtonEdit"><span class="glyphicon glyphicon-pencil"></span></a>
                                        <a ng-really-message="Are you sure want to delete Academic Session: {{item.AccSessName}} ?" ng-really-click="deleteAcademic(item)" item="item" title="@UIString.ButtonDelete"><span class="glyphicon glyphicon-trash"></span></a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>



