@using Group04_CMS.Common.Global
@model Group04_CMS.ViewModels.StudentCourseModel

@{
    ViewBag.Title = @UIString.TitlePageAssignStudentCourse;
}

@Scripts.Render("~/bundles/Faculty")
<section class="content-header">
    <h1>
        <i class="fa fa-list"></i>
        @UIString.TitlePageManageLarge
        <small> @UIString.FieldNameStudentCourse</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @UIString.BreadCrumbHome</a></li>
        <li><a href="@Url.Action("StudentCourse", "Faculty")">@UIString.TitlePageAssignStudentCourse</a></li>
        <li class="active">@UIString.BreadCrumbCreate</li>
    </ol>
</section>

<section class="content" ng-controller="facultyController">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-plus-square"></i>
                        @UIString.BreadCrumbCreate @UIString.FieldNameStudentCourse
                    </h3>
                </div>

                <!-- /.box-header -->
                <!-- form start -->
                <form name="studentCourseForm">
                    <div class="box-body">
                        <div class="row">
                            <div class="form-group col-md-4 col-sm-6 col-xs-12">
                                <label class="control-label">@UIString.FieldNameStudent</label>
                                <select ng-init="getStudents()" name="studentSelect" id="studentSelect" ng-model="selectedStudent" class="dropdown form-control" ng-required="true">
                                    <option value="" selected>-- Choose Student --</option>
                                    <option ng-repeat="item in students"
                                            value="{{item.StudentId}}">
                                        {{item.StudentCode}}
                                    </option>
                                </select>
                            </div>
                            <div class="form-group col-md-4 col-sm-6 col-xs-12">
                                <label class="control-label">@UIString.FieldNameCourseId</label>
                                <select name="courseSelect" id="courseSelect" class="dropdown form-control" required="required"
                                        ng-model="selectedCourse" ng-init="getCourses()"
                                        ng-options="item.CourseId as item.CourseCode for item in courses">
                                    <option value="">-- Choose Course --</option>
                                </select>
                                @*<select ng-init="getCourses()" name="courseSelect" id="courseSelect" ng-model="selectedCourse" class="dropdown form-control" ng-required="true">
                                    <option value="" selected>-- Choose Course --</option>
                                    <option ng-repeat="item in courses"
                                            value="{{item.CourseId}}">
                                        {{item.CourseCode}}
                                    </option>
                                </select>*@
                            </div>
                            <div class="form-group col-md-4 col-sm-12 col-xs-12">
                                <label class="control-label">Status</label>
                                <select ng-init="getGeneralStatusList()" ng-model="selectedStatus" class="dropdown form-control" ng-required="true">
                                    <option value="" selected>-- Choose Status --</option>
                                    <option ng-repeat="s in statusData"
                                            value="{{s.StatusName}}">
                                        {{s.StatusName}}
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <a class="btn btn-default btn-view" href="@Url.Action("StudentCourse/Guest", "Faculty")" title="@UIString.ButtonBack">
                            <i class="fa fa-chevron-circle-left"></i>
                            @UIString.ButtonBack
                        </a>

                        <button class="btn btn-primary btn-view" ng-click="studentCourseForm.$valid && addStudentCourse()" title="@UIString.ButtonSubmit">
                            @UIString.ButtonSubmit
                        </button>

                    </div>
                </form>

            </div>
        </div>
    </div>
</section>



