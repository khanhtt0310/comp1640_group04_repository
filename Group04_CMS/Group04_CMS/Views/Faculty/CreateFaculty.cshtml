@using Group04_CMS.Common.Global
@model Group04_CMS.ViewModels.FacultyModel

@{
    ViewBag.Title = @UIString.TitlePageFaculty;
}

@Scripts.Render("~/bundles/Faculty")
<section class="content-header">
    <h1>
        <i class="fa fa-list"></i>
        @UIString.TitlePageManageLarge
        <small> @UIString.FieldNameFacutyId</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @UIString.BreadCrumbHome</a></li>
        <li><a href="@Url.Action("Index", "Faculty")">@UIString.TitlePageFaculty</a></li>
        <li class="active">@UIString.BreadCrumbCreate</li>
    </ol>
</section>

<section class="content" ng-controller="facultyController">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-plus-square"></i>
                        @UIString.BreadCrumbCreate @UIString.FieldNameFacutyId
                    </h3>
                </div>

                <!-- /.box-header -->
                <!-- form start -->
                <form name="facultyForm">
                    <div class="box-body">

                        <div class="row">
                            <div class="form-group col-md-3 col-sm-3 col-xs-12">
                                <label class="control-label">@UIString.FieldNameFaculty</label>
                                <input class="form-control" ng-model="FacultyName" ng-required="true" />
                            </div>
                            <div class="form-group col-md-3 col-sm-3 col-xs-12">
                                <label class="control-label">@UIString.FieldNameDirector</label>
                                <select ng-init="getDirectors()" ng-model="selectedDirector" class="dropdown form-control" ng-required="true">
                                    <option value="" selected>-- Choose director --</option>
                                    <option ng-repeat="item in directorData"
                                            value="{{item.Id}}">
                                        {{item.UserName}}
                                    </option>
                                </select>
                            </div>
                            <div class="form-group col-md-3 col-sm-3 col-xs-12">
                                <label class="control-label">@UIString.FieldNameProVice</label>
                                <select ng-init="getProVices()" ng-model="selectedProVice" class="dropdown form-control" ng-required="true">
                                    <option value="" selected>-- Choose director --</option>
                                    <option ng-repeat="item in proViceData"
                                            value="{{item.Id}}">
                                        {{item.UserName}}
                                    </option>
                                </select>
                            </div>
                            <div class="form-group col-md-3 col-sm-3 col-xs-12">
                                <label class="control-label">Status</label>
                                <select ng-model="selectedStatus" class="dropdown form-control" ng-required="true">
                                    <option value="" selected>-- Choose status --</option>
                                    <option ng-repeat="s in statusData"
                                            value="{{s.StatusName}}">
                                        {{s.StatusName}}
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                <label class="control-label">@UIString.FieldNameNote</label>
                                <input type="text" class="form-control" ng-model="Note" ng-required="true" />
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">

                        <a class="btn btn-default btn-view" href="@Url.Action("Index", "Faculty")" title="@UIString.ButtonBack">
                            <i class="fa fa-chevron-circle-left"></i>
                            @UIString.ButtonBack
                        </a>

                        <button class="btn btn-primary btn-view" ng-click="facultyForm.$valid && addFaculty()" title="@UIString.ButtonSubmit">
                            @UIString.ButtonSubmit
                        </button>

                    </div>
                </form>

            </div>
        </div>
    </div>
</section>

