@using Group04_CMS.Common.Global
@model IEnumerable<Group04_CMS.ViewModels.FacultyModel>

@{
    ViewBag.Title = @UIString.TitlePageFaculty;
}

@Scripts.Render("~/bundles/Faculty")
@*<script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>*@
<section class="content-header">
    <h1>
        <i class="fa fa-list"></i>
        @UIString.TitlePageManageLarge
        <small> @UIString.ObjectFaculty</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @UIString.BreadCrumbHome</a></li>
        <li class="active">@UIString.TitlePageFaculty</li>
    </ol>
</section>

<section class="content" ng-controller="facultyController">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        <i class="fa fa-search"></i>
                        @UIString.BreadCrumbView @UIString.ObjectFaculty
                    </h3>
                    <div class="box-tools">
                        <p class="text-right btn-grid-group">

                            <a class="btn btn-primary btn-sm" href="@Url.Action("CreateFaculty")" title="@UIString.ButtonAdd">
                                <i class="fa fa-plus"></i> @UIString.ButtonAdd
                            </a>
                        </p>
                    </div>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped table-hover" ng-init="getFaculties()">
                        <tbody>
                            <tr>
                                <th>
                                    Faculty Name
                                </th>
                                <th>
                                    Note
                                </th>
                                <th>
                                    Created Date
                                </th>
                                <th>
                                    Status
                                </th>

                                <th></th>
                            </tr>

                            <tr ng-repeat="item in faculties">
                                <td>{{ item.FacultyName }}</td>
                                <td>{{ item.Note }}</td>
                                <td>{{ item.GeneralStatus.CreateTime | date: 'medium' }}</td>
                                <td>{{ item.GeneralStatus.StatusName }}</td>
                                <td class="row">
                                    <div class="col-sm-12">
                                        <a ng-href="@Url.Action("FacultyDetail", "Faculty")/{{item.FacultyId}}" title="@UIString.ButtonViewDetail"><span class="glyphicon glyphicon-eye-open"></span></a>
                                        <a ng-href="@Url.Action("EditFaculty", "Faculty")/{{item.FacultyId}}" title="@UIString.ButtonEdit"><span class="glyphicon glyphicon-pencil"></span></a>
                                        <a ng-really-message="Are you sure want to delete user: {{item.FacultyName}} ?" ng-really-click="deleteFaculty(item)" item="item" title="@UIString.ButtonDelete"><span class="glyphicon glyphicon-trash"></span></a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


