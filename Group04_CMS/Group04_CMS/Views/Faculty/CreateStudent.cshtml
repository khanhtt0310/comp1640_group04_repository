
@using Group04_CMS.Common.Global
@model Group04_CMS.ViewModels.StudentModel

@{
    ViewBag.Title = @UIString.TitlePageStudent;
}

@Scripts.Render("~/bundles/Faculty")
<section class="content-header">
    <h1>
        <i class="fa fa-list"></i>
        @UIString.TitlePageManageLarge
        <small> @UIString.FieldNameStudent</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @UIString.BreadCrumbHome</a></li>
        <li><a href="@Url.Action("Student", "Faculty")">@UIString.TitlePageStudent</a></li>
        <li class="active">@UIString.BreadCrumbCreate</li>
    </ol>
</section>

<section class="content" ng-controller="facultyController">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-plus-square"></i>
                        @UIString.BreadCrumbCreate @UIString.FieldNameStudent
                    </h3>
                </div>

                <!-- /.box-header -->
                <!-- form start -->
                <form name="studentForm">
                    <div class="box-body">
                        <div class="row">
                            <div class="form-group col-md-4 col-sm-12 col-xs-12">
                                <label class="control-label">@UIString.FieldNameStudentName</label>
                                <input class="form-control" ng-model="FullName" ng-required="true" />
                            </div>
                            <div class="form-group col-md-4 col-sm-8 col-xs-12">
                                <label class="control-label">@UIString.FieldNameEmail</label>
                                <input class="form-control" ng-model="Email" ng-required="true"/>
                            </div>
                            <div class="form-group col-md-4 col-sm-4 col-xs-12">
                                <label class="control-label">@UIString.FieldNameStudentCode</label>
                                <input class="form-control" ng-model="StudentCode" ng-required="true" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-4 col-sm-12 col-xs-12">
                                <label class="control-label">@UIString.FieldNameDateOfBirth</label>
                                <input class="form-control hasDatepicker" placeholder="@UIString.DatePickerDateOfBirth"
                                        ng-model="DateOfBirth" ng-required="true" />
                            </div>
                            <div class="form-group col-md-4 col-sm-8 col-xs-12">
                                <label class="control-label">@UIString.FieldNamePhoneNumber</label>
                                <input class="form-control" ng-model="PhoneNumber" ng-required="true"/>
                            </div>
                            <div class="form-group col-md-4 col-sm-4 col-xs-12">
                                <label class="control-label">@UIString.FieldNameAddress</label>
                                <input class="form-control" ng-model="Address" ng-required="true" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-4 col-sm-4 col-xs-12">
                                <label class="control-label">@UIString.FieldNameStatus</label>
                                <select ng-model="selectedState" class="dropdown form-control" ng-required="true">
                                    <option value="" selected>-- Choose status --</option>
                                    <option ng-repeat="s in stateData"
                                            value="{{s.StatusName}}">
                                        {{s.StatusName}}
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">

                        <a class="btn btn-default btn-view" href="@Url.Action("Student", "Faculty")" title="@UIString.ButtonBack">
                            <i class="fa fa-chevron-circle-left"></i>
                            @UIString.ButtonBack
                        </a>

                        <button class="btn btn-primary btn-view" ng-click="studentForm.$valid && addStudent()" title="@UIString.ButtonSubmit">
                            @UIString.ButtonSubmit
                        </button>

                    </div>
                </form>

            </div>
        </div>
    </div>
</section>

