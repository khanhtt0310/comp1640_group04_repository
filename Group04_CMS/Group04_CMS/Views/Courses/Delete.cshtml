@model Group04_CMS.Models.Course

@{
    ViewBag.Title = "Delete Course";
}

<section class="content-header">
    <h1><i class="fa fa-remove"></i> Delete Course: @Model.CourseName</h1>
</section>
<section class="content">
    <div class="box box-solid col-xs-12">
        <div class="box-header with-border">
            <h1 class="box-title"></h1>
        </div>
        <div class="box-body">
            <h3 class="no-margin">Are you sure you want to delete this course?</h3>
            <hr/>
            <div>
                <dl class="dl-horizontal">
                    <dt>Course Code</dt>
                    <dd>
                        @Html.DisplayFor(model => model.CourseCode)
                    </dd>
                    <dt>Course Name</dt>
                    <dd>
                        @Html.DisplayFor(model => model.CourseName)
                    </dd>
                    <dt>Course Status</dt>
                    <dd>
                        @Html.DisplayFor(model => model.CourseStatus)
                    </dd>
                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color col-lg-offset-1">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                }
            </div>
        </div>
        <div class="box-footer">
            <div class="form-group col-xs-12">
                <a href="/Courses/Index"><i class="fa fa-reply"></i> Back to List</a>
            </div>
        </div>
    </div>
</section>