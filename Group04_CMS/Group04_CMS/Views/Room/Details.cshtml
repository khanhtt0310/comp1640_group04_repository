@using MIS.Common
@model MIS.Web.Models.RoomViewModel

@{
    ViewBag.Title = @UIString.TitlePageRoom;
}

<section class="content-header">
    <h1 class="fa fa-list">
         @UIString.TitlePageRoom
        <small> @UIString.FieldNameRoomId</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @UIString.BreadCrumbHome</a></li>
        <li><a href="@Url.Action("Index", "Room")"> @UIString.TitlePageRoom<</a></li>
        <li class="active"> @UIString.BreadCrumbDetails</li>
    </ol>
    <div class="box-tools">
        <p class="text-right btn-grid-group">

            <a class="btn btn-default btn-view" href="@Url.Action("Index", "Room")" title="@UIString.ButtonBack">
                <i class="fa fa-chevron-circle-left"></i>
                @UIString.ButtonBack
            </a>

            <a class="btn btn-info btn-view" href="@Url.Action("Edit", "Room", new { id = Model.Id })" title="@UIString.ButtonEdit">
                <i class="fa fa-edit"></i>
                @UIString.ButtonEdit
            </a>

            <a class="btn btn-danger btn-view" href="#" onclick="javascript:deleteItem(@Model.Id);" title="@UIString.ButtonDelete">
                <i class="fa fa-trash"></i>
                @UIString.ButtonDelete
            </a>
        </p>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-eye"></i>
                        @UIString.FieldNameRoomId @UIString.BreadCrumbDetails
                    </h3>
                </div>
                <div class="box-body">
                    <div class="box-body no-padding table-responsive">
                        <table class="table table-striped table-bordered detail-view" id="w0">
                            <tbody class="table-hover">
                                <tr class="odd">
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.RoomName)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.RoomName)</td>
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.RoomCode)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.RoomCode)</td>
                                </tr>
                                <tr class="even">
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.CampusId)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.Campus.Name)</td>
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.StatusId)</th>
                                    <td class="col-sm-4"><span class="label label-success">@Html.DisplayFor(model => model.Status.StatusName)</span></td>
                                </tr>
                                <tr class="odd">
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.Note)</th>
                                    <td colspan="3">@Html.DisplayFor(model => model.Note)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript" src="~/Scripts/bootbox.min.js"></script>
<script type="text/javascript">
        function deleteItem(id) {
            bootbox.dialog({
                message: "@Message.ConfirmationDeletion @UIString.ObjectRoom?",
                title: "@UIString.TitleDialogConfirmDelete @UIString.ObjectRoom",
                buttons: {
                    cancel: {
                        label: "@UIString.ButtonConfirmDeleteNo",
                        className: "btn-default",
                        callback: function () {
                            bootbox.hideAll();
                        }
                    },
                    ok: {
                        label: "@UIString.ButtonConfirmDeleteYes",
                        className: "btn-primary",
                        callback: function () {
                            location.href = "@Url.Action("Delete", "Room")/" + id;
                        }
                    }
                }
            });
        }
</script>