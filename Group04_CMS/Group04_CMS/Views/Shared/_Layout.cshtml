<!DOCTYPE html>
<html ng-app="cmsApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - G4 - CMS Application</title>

    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/font-awesome.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/skins/_all-skins.css">
    <link rel="stylesheet" href="~/Content/toastr.css">
    @if (IsSectionDefined("css"))
    {
        @RenderSection("css");
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    <script src="~/Scripts/AdminLTE/app.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/cmsApp")
</head>
<body class="skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="@Url.Action("IndexStudent", "Home")" class="logo">
                <span class="logo-mini"><b>G4-CMS</b></span>
                <span class="logo-lg"><b>G4-CMS</b></span>
            </a>
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/img/user-avartar.jpg" class="user-image" alt="User Image">
                                <span class="hidden-xs">User</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="user-header">
                                    <img src="~/img/avatar.png" class="img-circle" alt="User Image">
                                    <p>
                                        Khanhtt - Admin
                                        <small>Member since Nov. 2012</small>
                                    </p>
                                </li>
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat">Profile</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="#" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="main-sidebar">
            <section class="sidebar">
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/img/user-avartar.jpg" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>User</p>
                    </div>
                </div>
                <ul class="sidebar-menu">
                    <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> <span>Homepage</span></a></li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-university"></i> <span>Academics</span>
                        </a>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-graduation-cap"></i> <span>User Management</span> <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Role", "Account")"><i class="fa fa-graduation-cap"></i> Roles</a></li>
                            <li><a href="@Url.Action("Index", "Account")"><i class="fa fa-graduation-cap"></i> Users</a></li>
                            <li><a href="@Url.Action("UserRole", "Account")"><i class="fa fa-graduation-cap"></i> Users - Roles</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-sitemap"></i> <span>Course Management</span> <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index", "Courses")"><i class="fa fa-list-ol"></i> Courses</a></li>
                            <li><a href="@Url.Action("Student", "Faculty")"><i class="fa fa-list-ol"></i> Students</a></li>
                            <li><a href="@Url.Action("Index", "Faculty")"><i class="fa fa-list-ol"></i> Faculties</a></li>
                            <li><a href="@Url.Action("FacultyCourse", "Faculty")"><i class="fa fa-list-ol"></i> Faculties - Courses</a></li>
                            <li><a href="@Url.Action("CreateStudentCourse", "Faculty")"><i class="fa fa-list-ol"></i> Assign Students & Courses</a></li>
                            <li><a href="@Url.Action("StudentCourse", "Faculty")"><i class="fa fa-list-ol"></i> Courses - StudentMarks</a></li>
                        </ul>
                    </li>
                </ul>
            </section>
        </aside>

        <div class="content-wrapper" id="main" style="min-height: 916px;">
            @RenderBody()
        </div>

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 0.0.1
            </div>
            <strong>Copyright © 2016 <a href="#">Group 04-CMS</a>.</strong> All rights reserved.
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
