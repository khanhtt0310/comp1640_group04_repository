
@model MIS.Web.Models.StudentProgramViewModel

@{
    ViewBag.Title = "Student Program Management";
}

<section class="content-header">
    <h1 class="fa fa-list">
        Manage
        <small> Student Program</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Student Program Management</a></li>
        <li class="active">Edit</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-eye"></i>
                        Edit Student Program
                    </h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("Edit", "StudentProgram", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
    <div class="box-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group col-md-4 col-sm-6">
                @Html.LabelFor(model => model.StudentId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.StudentId, (IEnumerable<SelectListItem>)ViewBag.StudentInformationList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-4 col-sm-6">
                @Html.LabelFor(model => model.SchoolId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.SchoolId, (IEnumerable<SelectListItem>)ViewBag.SchoolList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SchoolId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-4 col-sm-6">
                @Html.LabelFor(model => model.ProgramId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.ProgramId, (IEnumerable<SelectListItem>)ViewBag.ProgramList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProgramId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4 col-sm-6">
                @Html.LabelFor(model => model.SemesterProgramId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.SemesterProgramId, (IEnumerable<SelectListItem>)ViewBag.SemesterProgramList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SemesterProgramId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-4 col-sm-6">
                @Html.LabelFor(model => model.SemesterId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.SemesterId, (IEnumerable<SelectListItem>)ViewBag.SemesterList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SemesterId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-4 col-sm-6 col-xs-12">
                @Html.LabelFor(model => model.StatusId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.StatusId, (IEnumerable<SelectListItem>)ViewBag.StatusList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StatusId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4 col-sm-6">
                @Html.LabelFor(model => model.CreditArchive, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.CreditArchive, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CreditArchive, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
                    <div class="box-footer">
                        <a class="btn btn-default  btn-view " href="@Url.Action("Index", "StudentProgram")" title="@MIS.Common.UIString.ButtonBack">
                            <i class="fa fa-chevron-circle-left"></i>
                            @MIS.Common.UIString.ButtonBack
                        </a>
                        <button type="submit" class="btn btn-info  btn-view" title="@MIS.Common.UIString.ButtonEdit">
                            <i class=" fa fa-edit"></i>
                            @MIS.Common.UIString.ButtonEdit
                        </button>

                    </div>
                    <!-- /.box-footer -->
                }
            </div>
        </div>
    </div>
</section>
