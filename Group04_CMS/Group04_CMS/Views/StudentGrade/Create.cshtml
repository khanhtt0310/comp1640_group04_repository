@model MIS.Web.Models.ModuleProgramViewModel

@{
    ViewBag.Title = @MIS.Common.UIString.TitlePageHome;
}
<section class="content-header">
    <h1>
        <i class="fa fa-list"></i>
        @MIS.Common.UIString.TitlePageManageLarge
        <small>@MIS.Common.UIString.FieldNameModuleProgramId </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @MIS.Common.UIString.BreadCrumbHome</a></li>
        <li><a href="#">@MIS.Common.UIString.FieldNameModuleProgramId</a></li>
        <li class="active">@MIS.Common.UIString.BreadCrumbCreate</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                    <i class="fa fa-plus-square"></i>
                        @MIS.Common.UIString.BreadCrumbCreate  @MIS.Common.UIString.FieldNameModuleProgramId
                    </h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("Create", "ModuleProgram", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="form-group  col-md-6 col-sm-6">
                                @Html.LabelFor(model => model.ProgramId, htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.ProgramId, (IEnumerable<SelectListItem>)ViewBag.ProgramList, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ProgramId, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-6 col-sm-6">
                                @Html.LabelFor(model => model.SchoolId, htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.SchoolId, (IEnumerable<SelectListItem>)ViewBag.SchoolList, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SchoolId, "", new { @class = "text-danger" })
                            </div> </div>               
                   
                                <div class="row">             
                        <div class="form-group col-sm-12">
                            @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                        </div>
                        </div>               

                    <div class="box-footer">
                        <a class="btn btn-default btn-view" href="@Url.Action("Index", "ModuleProgram")" title="@MIS.Common.UIString.ButtonBack">
                            <i class="fa fa-chevron-circle-left"></i>
                            @MIS.Common.UIString.ButtonBack
                        </a>                       
                        <button type="submit" class="btn btn-primary btn-view" title="@MIS.Common.UIString.ButtonSubmit">
                            @MIS.Common.UIString.ButtonSubmit
                        </button>
                    </div>
                        </div>
                    <!-- /.box-footer -->
                }
                <!-- /.box-footer -->     
                       
            </div>
        </div>
       </div>
</section>
                                       