
@using MIS.Common
@model MIS.Web.Models.StudentModuleViewModel

<section class="content-header">
    <h1 class="fa fa-list">
        Manage
        <small> Student Module</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Student Module Management</a></li>
        <li class="active">Create</li>
    </ol>
    <div class="box-tools">
        <p class="text-right btn-grid-group">

            <a class="btn btn-default btn-view" href="@Url.Action("Index", "StudentModule")" title="@MIS.Common.UIString.ButtonBack">
                <i class="fa fa-chevron-circle-left"></i>
                @MIS.Common.UIString.ButtonBack
            </a>

            <a class="btn btn-info btn-view" href="@Url.Action("Edit", "StudentModule", new {id = Model.Id })" title="@MIS.Common.UIString.ButtonEdit">
                <i class="fa fa-edit"></i>
                @MIS.Common.UIString.ButtonEdit
            </a>

            <a class="btn btn-danger btn-view" href="#" onclick="javascript:deleteItem(@Model.Id);" title="@MIS.Common.UIString.ButtonDelete">
                <i class="fa fa-trash"></i>
                @MIS.Common.UIString.ButtonDelete
            </a>
        </p>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-eye"></i>
                        Student Module Details
                    </h3>
                </div>
                <div class="box-body">
                    
                    <div class="box-body no-padding table-responsive">
                        <table class="table table-striped table-bordered detail-view" id="w0">
                            <tbody>
                                <tr class="odd">
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.ModuleId)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.Module.Name)</td>
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.StudentId)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.Student.FullName)</td>
                                </tr>
                                <tr class="even">
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.SemesterProgramId)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.Program.SemesterNo)</td>
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.NumberOfCredit)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.NumberOfCredit)</td>
                                </tr>
                                <tr class="odd">
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.StatusId)</th>
                                    <td class="col-sm-4"><span class="label label-success">@Html.DisplayFor(model => model.Status.StatusName)</span></td>
                                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.Note)</th>
                                    <td class="col-sm-4">@Html.DisplayFor(model => model.Note)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                 
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript" src="~/Scripts/bootbox.min.js"></script>
<script type="text/javascript">
        function deleteItem(id) {
            bootbox.dialog({
                message: "@Message.ConfirmationDeletion @UIString.FieldNameStudentModuleId?",
                title: "@UIString.TitleDialogConfirmDelete @UIString.FieldNameStudentModuleId",
                buttons: {
                    cancel: {
                        label: "@UIString.ButtonConfirmDeleteNo",
                        className: "btn-default",
                        callback: function () {
                            bootbox.hideAll();
                        }
                    },
                    ok: {
                        label: "@UIString.ButtonConfirmDeleteYes",
                        className: "btn-primary",
                        callback: function () {
                            location.href = "@Url.Action("Delete", "StudentModule")/" + id;
                        }
                    }
                }
            });
        }
</script>