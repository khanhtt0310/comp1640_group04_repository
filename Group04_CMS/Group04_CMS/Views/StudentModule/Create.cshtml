
@using MIS.Common
@model MIS.Web.Models.StudentModuleViewModel

@{
    ViewBag.Title = "Student Module Management";
}

<section class="content-header">
    <h1>
        <i class="fa fa-list"></i>
        Manage
        <small>Student Module</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Student Module Management</a></li>
        <li class="active">Create</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-plus-square"></i>
                        Create Student Module
                    </h3>
                </div>

                <!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("Create", "StudentModule", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="form-group col-md-4 col-sm-12 col-xs-12">
                                @Html.LabelFor(model => model.StudentId, htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.StudentId, (IEnumerable<SelectListItem>)ViewBag.StudentList, "-----" + @UIString.DropListSelect + " " + @UIString.FieldNameStudentInformationId + "-----", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-4 col-sm-6 col-xs-12">
                                @Html.LabelFor(model => model.ModuleId, htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.ModuleId, (IEnumerable<SelectListItem>)ViewBag.ModuleList, "-----" + @UIString.DropListSelect + " " + @UIString.ObjectModule + "-----", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ModuleId, "", new { @class = "text-danger" })
                            </div>
                            
                            <div class="form-group col-md-4 col-sm-6 col-xs-12">
                                @Html.LabelFor(model => model.SemesterProgramId, htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.SemesterProgramId, (IEnumerable<SelectListItem>)ViewBag.SemesterProgramList, "-----" + @UIString.DropListSelect + " " + @UIString.FieldNameSemesterProgramId + "-----", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SemesterProgramId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-4 col-sm-6 col-xs-12">
                                @Html.LabelFor(model => model.NumberOfCredit, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.NumberOfCredit, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NumberOfCredit, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-4 col-sm-6 col-xs-12">
                                @Html.LabelFor(model => model.StatusId, htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.StatusId, (IEnumerable<SelectListItem>)ViewBag.StatusList, "-----" + @UIString.DropListSelect + " " + @UIString.FieldNameStatusId + "-----", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.StatusId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">

                        <a class="btn btn-default btn-view" href="@Url.Action("Index", "StudentModule")" title="@MIS.Common.UIString.ButtonBack">
                            <i class="fa fa-chevron-circle-left"></i>
                            @MIS.Common.UIString.ButtonBack
                        </a>

                        <button type="submit" class="btn btn-primary btn-view" title="@MIS.Common.UIString.ButtonSubmit">
                            @MIS.Common.UIString.ButtonSubmit
                        </button>

                    </div>
                    <!-- /.box-footer -->
                }
                <!-- /.box-footer -->

            </div>
        </div>
    </div>
</section>

@section css {
    <link rel="stylesheet" href="~/Content/datepicker3.css">
}
@section scripts {
    <script type="text/javascript" src="~/Scripts/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#StartDate').datepicker({
                showClose: true,
                showClear: true,
                toolbarPlacement: 'top'
            });
            $('#EndDate').datepicker({
                showClose: true,
                showClear: true,
                toolbarPlacement: 'top',
                stepping: 15
            });
        });
    </script>
}     